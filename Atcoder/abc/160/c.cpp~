#include <bits/stdc++.h>

using namespace std;

typedef long long ll;
typedef pair<int, int> pii;

#define rep(i,b) for(i=0;i<b;++i)
#define repp(i,a,b) for(i=a;i<b;++i)

int main() {
    ll k, n, cnt = 0;
    cin >> k >> n;
    vector<int> v(n);
    for(int i = 0; i < n; i++){
        cin >> v[i];
        if(v[i] == 0) cnt++;
    }
    sort(v.begin(), v.end());
    ll f = v[cnt], l = v[n-1];
    cout << f << " : "  << l << " : " <<(l-f);
    return 0;
}
