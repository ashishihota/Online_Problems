#include <bits/stdc++.h>

using namespace std;


typedef long long ll;
typedef pair<int, int> pii;
const int MOD = 1e9 + 7;

#define rep(i,b) for(i=0;i<b;++i)
#define repp(i,a,b) for(i=a;i<b;++i)

int main() {
	ios::sync_with_stdio(false);
    cin.tie(nullptr);
    ll t;
    cin >> t;
    while(t--){
        ll n;
        cin >> n;
        string s;
        cin >> s;
        vector<int> v(n);
        int cnt = 0;
        for(int i = 0; i < n; i++){
            char c = s[i];
            int a = (int)(c);
            v[i] = a - 48;
            if(v[i] == 1) cnt++;
        }
        vector<int> pref(n), suff(n);
        for(int i = 0; i < n; i++){
            pref[i] = v[i];
            suff[i] = v[i];
        }
        pref[0] = v[0];
        suff[n-1] = v[n-1];
        for(int i = 1; i < n; i++){
            pref[i] += pref[i-1];
        }
        for(int i = n - 2; i >= 0; i--){
            suff[i] += suff[i+1];
        }
        for(int i = 1; i < n -1; i++){
            if((suff[i] == i + 1) || (pref[i] == i + 1)){
                cnt++;
            }
        }
        cout << "answer is == ";
        cout << cnt << endl;
      //  for(auto i : pref) cout << i << " "; cout << endl; for(auto i : suff) cout << i << " "; cout << endl;

    }
    return 0;
}
